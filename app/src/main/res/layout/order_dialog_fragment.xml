<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button_selector4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/md_white_1000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/md_white_1000"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/md_white_1000"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titlet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp"
                        android:text="Confirmar Orden"
                        android:textAlignment="center"
                        android:textColor="@color/color_menufont"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999999" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/md_white_1000"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewFecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"
                        android:paddingBottom="2dp"
                        android:text="12-d Lord Ave."
                        android:textColor="@color/color_menufont"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/nombreLocal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:paddingBottom="10dp"
                        android:text="LOCAL-AVENIDA CANADA "
                        android:textColor="@color/color_menufont"
                        android:textSize="12dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/md_white_1000"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titlet7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/color_button"
                        android:gravity="center"
                        android:padding="10dp"
                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp"
                        android:text="DATOS USUARIO"
                        android:textAlignment="center"
                        android:textColor="@color/md_white_1000"
                        android:textSize="16dp"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/md_white_1000"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titlet17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp"
                        android:text="Name"
                        android:textColor="@color/color_texmenutop"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/textViewNombreUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp"
                        android:text="Eliza Mark"
                        android:textStyle="bold"
                        android:textColor="@color/color_menufont"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/md_white_1000"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titlet18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"


                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp"
                        android:text="Card"
                        android:textColor="@color/color_texmenutop"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/numeroTarjeta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp"
                        android:text="119965874235"
                        android:textStyle="bold"
                        android:textColor="@color/color_menufont"
                        android:textSize="12dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/md_white_1000"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titl1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"


                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp"
                        android:text="Exp. Date"
                        android:textColor="@color/color_texmenutop"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/titl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:paddingBottom="10dp"
                        android:text="09-20"
                        android:textColor="@color/color_menufont"
                        android:textSize="12dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/md_white_1000"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titl2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"


                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp"
                        android:text="CVV"
                        android:textColor="@color/color_texmenutop"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/titl12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp"
                        android:text="455"
                        android:textStyle="bold"
                        android:textColor="@color/color_menufont"
                        android:textSize="12dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnOrdernar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/md_white_1000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewConfirmar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/color_button"
                    android:gravity="center"
                    android:padding="10dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:text="ODERNAR !!! "
                    android:textAlignment="center"
                    android:textColor="@color/md_white_1000"
                    android:textSize="16dp"
                    android:textStyle="bold" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/md_white_1000"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp"
                        android:text="Total-"
                        android:textColor="@color/color_menufont"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/totalCantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp"
                        android:text="2 Items"
                        android:textStyle="bold"
                        android:textColor="@color/color_texmenutop"
                        android:textSize="11dp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/totalSoles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"
                    android:text="$ 290.00"
                    android:textStyle="bold"
                    android:textColor="@color/color_menufont"
                    android:textSize="11dp" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>