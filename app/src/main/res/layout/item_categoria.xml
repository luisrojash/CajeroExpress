<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_whiteboder"
            android:padding="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageCategoria"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/textViewNombreCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sport &amp; Gym"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout2"
            app:layout_constraintStart_toStartOf="@+id/frameLayout2"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />

        <TextView
            android:id="@+id/textViewCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="170+ items"
            android:textColor="#8c8c8c"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textViewNombreCategoria"
            app:layout_constraintTop_toBottomOf="@+id/textViewNombreCategoria" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>